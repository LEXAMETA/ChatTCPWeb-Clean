  "dependencies": {
    "expo": "^51.0.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.1",
    "react-native-web": "^0.19.10",
    "react-native-tcp-socket": "^6.0.0",
    "react-native-mmkv": "^2.12.2",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "expo-cli": "^6.3.10",
    "typescript": "^5.4.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "@types/react": "^18.2.0",
    "@types/node": "^20.12.7"
  },
  "private": true,
  "engines": {
    "node": ">=18"
